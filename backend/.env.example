# =========================
# Base de datos
# =========================
# Si tu backend corre en tu host (Node fuera de Docker), dejá localhost.
# Si lo metés en Docker, cambiá a postgres (nombre del servicio).
# DATABASE_URL=postgresql://admin:admin@localhost:5432/inventory_db
# SHADOW_DATABASE_URL=postgresql://admin:admin@localhost:5432/inventory_db_shadow

DATABASE_URL=postgresql://admin:admin@localhost:5432/inventory_db
SHADOW_DATABASE_URL=postgresql://admin:admin@localhost:5432/inventory_db_shadow
# =========================
# JWT
# =========================
JWT_SECRET=unlimitdev-secret
JWT_EXPIRES_IN=7d

# =========================
# App
# =========================
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# =========================
# Redis (BullMQ)
# =========================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0


# =========================
# pgAdmin (Opción PRO: permitir dominio especial)
# =========================
# Email y password de pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@local.test
PGADMIN_DEFAULT_PASSWORD=admin123

# Desactiva deliverability pero igual valida formato
PGADMIN_CONFIG_CHECK_EMAIL_DELIVERABILITY=False

# Lista de dominios especiales permitidos (en string JSON)
PGADMIN_CONFIG_ALLOW_SPECIAL_EMAIL_DOMAINS=["local.test","localhost","local"]

# (Opcional) correo de testing para tu app/backoffice
TEST_ADMIN_EMAIL=admin@local.test


# CORS (producción)
ALLOWED_ORIGINS=https://app.example.com,https://tenant1.example.com,https://tenant2.example.com

# API
API_DOCS_URL=https://docs.example.com/api

# AFIP
AFIP_MODE=HOMOLOGACION
AFIP_TEMP_DIR=/tmp/afip
AFIP_TOKEN_RENEWAL_SCHEDULE="0 0,12 * * *"
AFIP_LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
