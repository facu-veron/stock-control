# Variables de entorno para producción - Stock Control
# Copia este archivo como .env.prod y completa los valores

# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================
PROD_DB_PASSWORD=tu_password_super_seguro_aqui

# ===========================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# ===========================================
PROD_JWT_SECRET=tu_jwt_secret_super_largo_y_seguro_aqui

# ===========================================
# CONFIGURACIÓN DE DOMINIO
# ===========================================
DOMAIN=stockcontrol.unlimitdevsoftware.com
MAIN_DOMAIN=unlimitdevsoftware.com

# URLs de frontend y backend (se configuran automáticamente)
FRONTEND_URL=https://${DOMAIN}
API_URL=https://${DOMAIN}/api

# Dominios permitidos para CORS
ALLOWED_ORIGINS=https://${DOMAIN},https://${MAIN_DOMAIN}

# ===========================================
# CONFIGURACIÓN AVANZADA (Opcional)
# ===========================================

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5

# SSL/TLS
SSL_EMAIL=admin@unlimitdevsoftware.com

# Logs
LOG_LEVEL=info

